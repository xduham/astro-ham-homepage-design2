---
import CapsuleButton from "../CapsuleButton.astro";
import logo from "../../assets/LOGO.png";

const {hidetext} = Astro.props;
---
<header
        id="main-header"
        class="sticky top-0 z-50 w-full bg-[#FCFCFC]/80 dark:bg-[#121212]/80 backdrop-blur-sm"
>
    <div class="flex justify-between items-center-safe px-10 md:px-24 py-2">
        <a href="/" class="w-16 h-16 flex items-center justify-center">
            <img src={logo.src} alt="Logo" class="w-full h-full dark:invert"/>
        </a>

        <!--<div class="space-x-10 font-semibold text-primary-500 hidden md:flex">-->
        <!--    <a class="hover:underline underline-offset-2" href="#feature">社团特色</a>-->
        <!--    <a class="hover:underline underline-offset-2" href="#whyChooseUs">加入我们的理由</a>-->
        <!--    <a class="hover:underline underline-offset-2" href="#faq">FAQs</a>-->
        <!--</div>-->

        <!-- 如果hide 则不显示上面的 text  -->
        {!hidetext && (
            <div class="space-x-10 font-semibold text-primary-500 hidden md:flex">
                <a class="hover:underline underline-offset-2" href="#feature">社团特色</a>
                <a class="hover:underline underline-offset-2" href="#whyChooseUs">加入我们的理由</a>
                <a class="hover:underline underline-offset-2" href="#faq">FAQs</a>
            </div>
        )}

        <div>
            <CapsuleButton target="https://wiki.xduham.club/" >
                <div class="flex space-x-2">
                    <svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24'><title>web_fill</title><g id="web_fill" fill='none'><path d='M24 0v24H0V0zM12.593 23.258l-.011.002-.071.035-.02.004-.014-.004-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01-.017.428.005.02.01.013.104.074.015.004.012-.004.104-.074.012-.016.004-.017-.017-.427c-.002-.01-.009-.017-.017-.018m.265-.113-.013.002-.185.093-.01.01-.003.011.018.43.005.012.008.007.201.093c.012.004.023 0 .029-.008l.004-.014-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014-.034.614c0 .012.007.02.017.024l.015-.002.201-.093.01-.008.004-.011.017-.43-.003-.012-.01-.01z'/><path fill='#FFFFFFFF' d='M19 4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2zm0 6H5v7a1 1 0 0 0 .883.993L6 18h12a1 1 0 0 0 .993-.883L19 17zM6 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2m3 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2m3 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2'/></g></svg>
                    <p>社团 Wiki</p>
                </div>
            </CapsuleButton>
        </div>
    </div>
</header>

<script>
const header = document.getElementById('main-header');

if (!header) {
    throw new Error('Header element not found');
}

window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
        header.classList.add('border-b', 'border-secondary-400');
    } else {
        header.classList.remove('border-b', 'border-secondary-400');
    }
});
</script>